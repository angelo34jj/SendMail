@model Web.MailRequest

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Email Form (Separate multiple email addresses by comma for "To", "Cc" and "Bcc")</th>
        </tr>
        <tr>
            <td>To: </td>
            <td>
                @Html.TextBoxFor(m => m.To, new { @class = "wide" })
            </td>
        </tr>
        <tr>
            <td>Cc: </td>
            <td>
                @Html.TextBoxFor(m => m.Cc, new { @class = "wide" })
            </td>
        </tr>
        <tr>
            <td>Bcc: </td>
            <td>
                @Html.TextBoxFor(m => m.Bcc, new { @class = "wide" })
            </td>
        </tr>
        <tr>
            <td>Subject: </td>
            <td>
                @Html.TextBoxFor(m => m.Subject, new { @class = "wide" })
            </td>
        </tr>
        <tr>
            <td>Body: </td>
            <td>
                @Html.TextAreaFor(m => m.Message, new { @class = "wideheight" })
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>

    
}

<label style="font-size:medium;">@ViewBag.Message</label>
 

<style type="text/css">
   .wide
{
     width: 300px;
}

     .wideheight
{
     width: 300px;
     height:100px;
     
}
</style>